# Arash Bot Configuration
# Copy to .env and fill in your values - NEVER commit .env to git!

# Core
ENVIRONMENT=dev
AI_SERVICE_URL=https://your-ai-service-url.example.com
SESSION_TIMEOUT_MINUTES=30

# Telegram (Public)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_SERVICE_KEY=your_secure_telegram_service_key_here
TELEGRAM_DEFAULT_MODEL=google/gemini-2.0-flash-001
TELEGRAM_MODELS=google/gemini-2.0-flash-001,google/gemini-2.5-flash,deepseek/deepseek-chat-v3-0324,openai/gpt-4o-mini
TELEGRAM_RATE_LIMIT=20
TELEGRAM_MAX_HISTORY=10
TELEGRAM_COMMANDS=start,help,status,clear,model,models
TELEGRAM_ADMIN_USERS=admin1,admin2
TELEGRAM_ALLOW_MODEL_SWITCH=true

# Internal (Private)
INTERNAL_DEFAULT_MODEL=openai/gpt-5-chat
INTERNAL_MODELS=google/gemini-2.0-flash-001,deepseek/deepseek-chat-v3-0324,openai/gpt-4o-mini,anthropic/claude-sonnet-4,openai/gpt-4.1,openai/gpt-4o-search-preview,x-ai/grok-4,meta-llama/llama-4-maverick,google/gemini-2.5-flash,openai/gpt-5-chat
INTERNAL_RATE_LIMIT=60
INTERNAL_MAX_HISTORY=20
INTERNAL_API_KEY=your_secure_random_api_key_here
INTERNAL_ADMIN_USERS=h_hoseeini,f_taheri

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=arash_user
DB_PASSWORD=your_secure_password_here
DB_NAME=arash_db

# Redis (optional)
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/arash_api_service.log
LOG_TIMESTAMP=both
LOG_COLOR=auto
NO_COLOR=0
LOG_TIMESTAMP_PRECISION=3

# Features
ENABLE_IMAGE_PROCESSING=true
MAX_IMAGE_SIZE_MB=20

# Admin (Store in K8s Secrets in production)
SUPER_ADMIN_API_KEYS=

# API Server
API_HOST=0.0.0.0
API_PORT=3000
RUN_TELEGRAM_BOT=true
ENABLE_API_DOCS=true
CORS_ORIGINS=*
